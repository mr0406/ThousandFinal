@for (int i = 110; i <= 300; i = i + 10)
{
    var tempInt = i;
    <button class="raiseButton" name="button-@i" disabled="@IsDisabled(i)" @onclick="@(() => Bet(tempInt))">@i</button>
}

<button id="giveupButton" @onclick="GiveUpAuction">GiveUpAuction</button>

@code {
    [CascadingParameter] public Game Game { get; set; }
    [Parameter] public int lastHighest { get; set; }

    bool IsDisabled(int i)
    {
        if (lastHighest < i)
            return false;

        return true;
    }

    void GiveUpAuction()
    {
        Game.hubConnection.SendAsync(ClientToServer.GIVE_UP_AUCTION);
    }

    void Bet(int points)
    {
        Game.hubConnection.SendAsync(ClientToServer.BET, points);
    }
}
